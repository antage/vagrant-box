{
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "scripts": [
        "scripts/sudoers.sh",
        "scripts/apt.sh",
        "scripts/network.sh",
        "scripts/vagrant.sh",
		"scripts/virtualbox.sh",
		"scripts/cleanup.sh",
        "scripts/minimize.sh"
      ]
    }
  ],
  "builders": [
    {
      "type": "virtualbox-iso",
	  "vm_name": "debian-10",
      "boot_command": [
        "<esc><wait>",
        "install ",
        "preseed/url=http://{{.HTTPIP}}:{{.HTTPPort}}/buster-preseed.cfg ",
        "debian-installer=en_US.UTF-8 ",
        "auto ",
        "locale=en_US.UTF-8 ",
        "kbd-chooser/method=us ",
        "keyboard-configuration/xkb-keymap=us ",
        "console-setup/ask_detect=false ",
        "console-keymaps-at/keymap=us ",
        "netcfg/get_hostname={{.Name}} ",
        "netcfg/get_domain= ",
		"net.ifnames=0 ",
        "fb=false ",
        "debconf/frontend=noninteractive ",
        "<enter><wait>"
      ],
      "boot_wait": "5s",
      "disk_size": 8192,
      "guest_os_type": "Debian_64",
      "headless": true,
      "http_directory": "http",
      "iso_urls": [
        "iso/debian-10.0.0-amd64-netinst.iso",
        "https://cdimage.debian.org/debian-cd/current/amd64/iso-cd/debian-10.0.0-amd64-netinst.iso"
      ],
      "iso_checksum_type": "sha256",
	  "iso_checksum": "3dbb597b7f11dbda71cda08d4c1339c1eb565e784c75409987fa2b91182d9240",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now",
	  "post_shutdown_delay": "10s",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "virtualbox_version_file": ".vbox_version",
	  "cpus": 2,
	  "memory": "4096",
      "vboxmanage_post": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "512"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "1"
        ]
      ]
    }
  ],
  "post-processors": [
    [
      {
        "output": "box/debian-10.box",
        "type": "vagrant"
      }
    ]
  ]
}
